{
  "manifest_version": 3,
  "name": "Clear News",
  "version": "1.0.0",
  "description": "Chrome Extension with React & TypeScript",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
